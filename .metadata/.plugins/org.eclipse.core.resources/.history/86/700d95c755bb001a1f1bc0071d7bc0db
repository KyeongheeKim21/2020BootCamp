<mapper namespace="mapper">
	<sql id="test03_truc" >
		TRUNCATE TABLE TEST03.TBL_LT_INF
	</sql>
	<sql id="test01ToTest03">
		INSERT INTO TEST03.TBL_LT_INF
			SELECT *
  			FROM TEST01.TBL_LT_INF
	</sql>
	<sql id="merge">
		<!-- -->
		MERGE INTO TEST03.TBL_LT_INF t3 USING TEST02.TBL_LT_INF t2 
		ON (t3.fa_id = t2.fa_id and t3.lt_id = t2.lt_id and t3.prod_id = t2.prod_id) 
		WHEN NOT MATCHED THEN 
		INSERT(FA_ID,LT_ID,PROD_ID,FL_ID,OP_ID,TIMEKEY,CHG_TM, CRT_TM) values 
		(t2.FA_ID,t2.LT_ID,t2.PROD_ID,t2.FL_ID,t2.OP_ID,t2.TIMEKEY,t2.CHG_TM, t2.CRT_TM)
	</sql>

</mapper>