package jdbc;

import java.sql.*;

public class Main {

	public static void main(String[] args) {
		Connection conn = null;
		Statement st = null;
		ResultSet rs = null;
		String url = "jdbc:oracle:thin:@localhost:1522:orcl";//192.168.35.212
		String user = "SYS as sysdba"; 
		String password = "329032";
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			conn = DriverManager.getConnection(url, user, password);
			System.out.println("driver loading success!!");
			st = conn.createStatement();
			
			//rs = st.executeQuery("SELECT DISTINCT FA_ID FROM TEST01.TBL_LT_INF");
			rs = st.executeQuery("SELECT DISTINCT ENAME FROM SCOTT.EMP");
			int idx = 1;
			while(rs.next()) {
				//int fa_id = rs.getInt(1);
				//System.out.println(fa_id);
				String name = rs.getString("ENAME");
				System.out.println(idx++ +" "+ name);
			}
			
			
		}catch(Exception e) {
			//System.err.print("main err "+e);
			e.printStackTrace();
		}finally{
			try {
				if(rs != null) rs.close();
				if(st != null) st.close();
				if(conn != null) conn.close();
			}catch(SQLException e) {
				e.printStackTrace();
				//System.err.print("finally err "+e);
			}
			
		}
	}

}
